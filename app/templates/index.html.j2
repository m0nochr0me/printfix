{% extends "base.html.j2" %}

{% block head_extra %}
<script>
window.extraSetup = function(Vue, { apiKey, hasKey }) {
    const { ref, computed, onMounted, onUnmounted, watch } = Vue;

    const jobs = ref([]);
    const file = ref(null);
    const fileInput = ref(null);
    const isDragging = ref(false);
    const uploading = ref(false);
    const uploadError = ref('');
    const effort = ref('standard');
    const aggressiveness = ref('smart_auto');
    const targetPageSize = ref('');
    const targetColorspace = ref('');
    let pollTimer = null;

    const authHeaders = () => ({
        'Authorization': `Bearer ${apiKey.value}`
    });

    const fetchJobs = async () => {
        if (!hasKey.value) return;
        try {
            const res = await fetch('/v1/jobs', { headers: authHeaders() });
            if (res.ok) jobs.value = await res.json();
        } catch (e) {
            console.error('Failed to fetch jobs:', e);
        }
    };

    const uploadFile = async () => {
        if (!file.value || !hasKey.value || uploading.value) return;
        uploading.value = true;
        uploadError.value = '';
        const fd = new FormData();
        fd.append('file', file.value);
        fd.append('effort', effort.value);
        fd.append('aggressiveness', aggressiveness.value);
        if (targetPageSize.value) fd.append('target_page_size', targetPageSize.value);
        if (targetColorspace.value) fd.append('target_colorspace', targetColorspace.value);
        try {
            const res = await fetch('/v1/jobs', { method: 'POST', headers: authHeaders(), body: fd });
            if (res.ok) {
                const data = await res.json();
                window.location.href = `/jobs/${data.id}`;
            } else {
                const err = await res.json().catch(() => ({ detail: 'Upload failed' }));
                uploadError.value = err.detail || 'Upload failed';
            }
        } catch (e) {
            uploadError.value = 'Network error. Check your connection.';
        } finally {
            uploading.value = false;
        }
    };

    const deleteJob = async (id) => {
        if (!confirm('Delete this job and all associated files?')) return;
        try {
            await fetch(`/v1/jobs/${id}`, { method: 'DELETE', headers: authHeaders() });
            jobs.value = jobs.value.filter(j => j.id !== id);
        } catch (e) { console.error('Delete failed:', e); }
    };

    const removeFile = () => { file.value = null; uploadError.value = ''; };
    const browseFiles = () => { if (!file.value) fileInput.value?.click(); };
    const onDragOver = (e) => { e.preventDefault(); isDragging.value = true; };
    const onDragLeave = () => { isDragging.value = false; };
    const onDrop = (e) => {
        e.preventDefault(); isDragging.value = false;
        if (e.dataTransfer.files.length) file.value = e.dataTransfer.files[0];
    };
    const onFileSelect = (e) => { if (e.target.files.length) file.value = e.target.files[0]; };

    const formatSize = (bytes) => {
        const b = Number(bytes);
        if (!b) return '';
        if (b < 1024) return b + ' B';
        if (b < 1048576) return (b / 1024).toFixed(1) + ' KB';
        return (b / 1048576).toFixed(1) + ' MB';
    };
    const formatDate = (d) => d ? new Date(d).toLocaleString() : '-';
    const timeAgo = (d) => {
        if (!d) return '';
        const s = Math.floor((Date.now() - new Date(d).getTime()) / 1000);
        if (s < 60) return 'just now';
        if (s < 3600) return Math.floor(s / 60) + 'm ago';
        if (s < 86400) return Math.floor(s / 3600) + 'h ago';
        return Math.floor(s / 86400) + 'd ago';
    };
    const statusColor = (s) => ({
        done: 'bg-green-500', failed: 'bg-red-500', needs_review: 'bg-yellow-500',
        fixing: 'bg-blue-400', diagnosing: 'bg-blue-400', verifying: 'bg-blue-400',
        uploaded: 'bg-gray-400', ingesting: 'bg-gray-400', converting: 'bg-gray-400',
        rendering: 'bg-gray-400', ingested: 'bg-gray-400', diagnosed: 'bg-indigo-400',
    }[s] || 'bg-gray-400');
    const statusLabel = (s) => ({
        uploaded: 'Uploaded', ingesting: 'Ingesting', converting: 'Converting',
        rendering: 'Rendering', ingested: 'Ready', diagnosing: 'Diagnosing',
        diagnosed: 'Diagnosed', fixing: 'Fixing', verifying: 'Verifying',
        done: 'Done', needs_review: 'Review', failed: 'Failed',
    }[s] || s);
    const isProcessing = (s) => ['uploaded','ingesting','converting','rendering','diagnosing','fixing','verifying'].includes(s);
    const confidenceColor = (c) => {
        if (c >= 90) return 'text-green-400';
        if (c >= 70) return 'text-yellow-400';
        if (c >= 50) return 'text-orange-400';
        return 'text-red-400';
    };

    onMounted(() => { fetchJobs(); pollTimer = setInterval(fetchJobs, 5000); });
    onUnmounted(() => { if (pollTimer) clearInterval(pollTimer); });
    watch(apiKey, (v) => { if (v) fetchJobs(); else jobs.value = []; });

    return {
        jobs, file, fileInput, isDragging, uploading, uploadError,
        effort, aggressiveness, targetPageSize, targetColorspace,
        fetchJobs, uploadFile, deleteJob, removeFile, browseFiles,
        onDragOver, onDragLeave, onDrop, onFileSelect,
        formatSize, formatDate, timeAgo,
        statusColor, statusLabel, isProcessing, confidenceColor,
    };
};
</script>
{% endblock %}

{% block content %}
<!-- No API Key -->
<div v-if="!hasKey" class="flex flex-col items-center justify-center py-20 text-gray-400">
    <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z"/>
    </svg>
    <p class="text-lg mb-2">No API Key Set</p>
    <p class="text-sm">Click <strong class="text-white">Set API Key</strong> above to get started</p>
</div>

<!-- Main Content -->
<div v-else class="max-w-5xl mx-auto">
    <!-- Upload Section -->
    <div class="bg-gray-900 rounded-xl p-6 mb-8 border border-gray-800">
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"/>
            </svg>
            Upload Document
        </h2>

        <!-- Drop Zone -->
        <div @dragover="onDragOver" @dragleave="onDragLeave" @drop="onDrop" @click="browseFiles"
             :class="[isDragging ? 'border-blue-500 bg-blue-500/10' : 'border-gray-700 hover:border-gray-500',
                       file ? 'cursor-default' : 'cursor-pointer']"
             class="border-2 border-dashed rounded-lg p-6 text-center transition-all duration-200">
            <div v-if="!file">
                <svg class="w-10 h-10 mx-auto mb-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12l-3-3m0 0l-3 3m3-3v6m-1.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
                </svg>
                <p class="text-gray-400">Drag &amp; drop a document here, or <span class="text-blue-400 underline">browse</span></p>
                <p class="text-gray-600 text-xs mt-1">PDF, DOCX, XLSX, PPTX, ODT, ODS, ODP, JPG, PNG, TIFF</p>
            </div>
            <div v-else class="flex items-center justify-center gap-3">
                <svg class="w-8 h-8 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
                </svg>
                <div>
                    <p class="text-white font-medium">${ file.name }</p>
                    <p class="text-gray-400 text-sm">${ formatSize(file.size) }</p>
                </div>
                <button @click.stop="removeFile" class="ml-2 text-gray-400 hover:text-red-400 transition-colors" title="Remove file">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <input type="file" ref="fileInput" @change="onFileSelect" class="hidden"
                   accept=".pdf,.docx,.xlsx,.pptx,.odt,.ods,.odp,.jpg,.jpeg,.png,.tiff">
        </div>

        <!-- Settings -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mt-4">
            <div>
                <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wide">Effort</label>
                <select v-model="effort"
                        class="w-full bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-none">
                    <option value="quick">Quick</option>
                    <option value="standard">Standard</option>
                    <option value="thorough">Thorough</option>
                </select>
            </div>
            <div>
                <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wide">Aggressiveness</label>
                <select v-model="aggressiveness"
                        class="w-full bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-none">
                    <option value="smart_auto">Smart Auto</option>
                    <option value="conservative">Conservative</option>
                    <option value="moderate">Moderate</option>
                    <option value="aggressive">Aggressive</option>
                </select>
            </div>
            <div>
                <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wide">Page Size</label>
                <select v-model="targetPageSize"
                        class="w-full bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-none">
                    <option value="">Original</option>
                    <option value="a4">A4</option>
                    <option value="letter">Letter</option>
                </select>
            </div>
            <div>
                <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wide">Color Space</label>
                <select v-model="targetColorspace"
                        class="w-full bg-gray-800 border border-gray-700 rounded-md px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-none">
                    <option value="">Original</option>
                    <option value="cmyk">CMYK</option>
                    <option value="rgb">RGB</option>
                </select>
            </div>
        </div>

        <!-- Upload Button -->
        <div class="mt-4 flex items-center gap-4">
            <button @click="uploadFile" :disabled="!file || uploading"
                    class="bg-blue-600 hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed text-white px-6 py-2.5 rounded-md font-medium transition-colors flex items-center gap-2">
                <svg v-if="uploading" class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/>
                </svg>
                ${ uploading ? 'Uploading...' : 'Upload & Process' }
            </button>
            <p v-if="uploadError" class="text-red-400 text-sm">${ uploadError }</p>
        </div>
    </div>

    <!-- Jobs Section -->
    <div>
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold">Recent Jobs</h2>
            <button @click="fetchJobs" class="text-gray-400 hover:text-white text-sm flex items-center gap-1 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Refresh
            </button>
        </div>

        <!-- Empty State -->
        <div v-if="jobs.length === 0" class="text-center py-16 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0l-3-3m3 3l3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
            </svg>
            <p>No jobs yet. Upload a document to get started.</p>
        </div>

        <!-- Job Cards -->
        <div v-else class="space-y-3">
            <a v-for="job in jobs" :key="job.id" :href="'/jobs/' + job.id"
               class="block bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-gray-600 transition-all duration-200 group">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3 min-w-0">
                        <span :class="[statusColor(job.status), isProcessing(job.status) ? 'animate-pulse' : '']"
                              class="w-2.5 h-2.5 rounded-full flex-shrink-0"></span>
                        <div class="min-w-0">
                            <p class="text-white font-medium truncate group-hover:text-blue-400 transition-colors">
                                ${ job.original_filename }
                            </p>
                            <p class="text-gray-500 text-sm">
                                ${ statusLabel(job.status) }
                                <span v-if="job.pages"> &middot; ${ job.pages } pg</span>
                                <span v-if="job.file_type"> &middot; ${ job.file_type }</span>
                                <span v-if="job.file_size_bytes"> &middot; ${ formatSize(job.file_size_bytes) }</span>
                                &middot; ${ timeAgo(job.created_at) }
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4 flex-shrink-0 ml-4">
                        <div v-if="job.issues_found" class="text-right hidden sm:block">
                            <p class="text-sm">
                                <span class="text-green-400">${ job.issues_fixed }</span>
                                <span class="text-gray-600">/</span>
                                <span class="text-gray-400">${ job.issues_found }</span>
                                <span class="text-gray-600 text-xs ml-1">fixed</span>
                            </p>
                        </div>
                        <div v-if="job.confidence" class="text-right hidden sm:block">
                            <p :class="confidenceColor(job.confidence)" class="text-sm font-semibold">
                                ${ Math.round(job.confidence) }%
                            </p>
                        </div>
                        <button @click.prevent.stop="deleteJob(job.id)"
                                class="text-gray-600 hover:text-red-400 transition-colors p-1 opacity-0 group-hover:opacity-100" title="Delete">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </button>
                    </div>
                </div>
                <p v-if="job.status === 'failed' && job.error" class="mt-2 text-red-400 text-sm truncate">${ job.error }</p>
            </a>
        </div>
    </div>
</div>
{% endblock %}
